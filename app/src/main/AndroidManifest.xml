<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.psi_stud.arturas.ggdb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.default" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/title_activity_user_profile" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search" />
        <activity
            android:name=".NewsActivity"
            android:label="@string/title_activity_news" />
        <activity
            android:name=".NewsContentActivity"
            android:label="@string/title_activity_news_content" />
        <activity
            android:name=".GameListActivity"
            android:label="@string/title_activity_game_list" />
        <activity
            android:name=".DynamicSearch"
            android:label="@string/title_activity_dynamic_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MessageActivity"></activity>
    </application>

</manifest>